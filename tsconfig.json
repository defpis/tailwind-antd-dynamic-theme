{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    "jsx": "react-jsx",

    "target": "ESNext",
    "module": "ESNext",

    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,

    "skipLibCheck": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  "include": ["src"]
}
